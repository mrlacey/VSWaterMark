<UserControl
	x:Class="VSWaterMark.WaterMarkControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:VSWaterMark"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DesignHeight="50"
	d:DesignWidth="80"
	mc:Ignorable="d">
	<Border
		Name="WaterMarkBorder"
		Margin="0"
		Padding="0"
		Background="red"
		BorderBrush="Transparent"
		BorderThickness="1"
		Opacity="0.7">
		<Grid>
			<Label
				Name="WaterMarkText"
				Content="@MRLacey"
				FontFamily="Arial"
				FontSize="12"
				Foreground="Black" />
			<Image Name="WaterMarkImage" Visibility="Hidden" />
		</Grid>
	</Border>
</UserControl>
